<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="lanjing.com.titan.activity.RegisterWalletActivity">
    <com.lxh.baselibray.view.TitleView
        android:layout_width="match_parent"
        android:layout_height="@dimen/titil_view_height"
        android:background="@color/default_white_bg"
        app:ivLeftPic="@mipmap/icon_page_return"
        app:titleTextColor="@color/common_black"
        app:tvTitleText="@string/wallet_mnemonic" />

    <LinearLayout
        android:layout_margin="@dimen/dp_20"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:gravity="center_horizontal"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/blue"
            android:layout_marginTop="@dimen/dp_20"
            android:text="@string/set_wallet_mnemonic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:gravity="center_horizontal"
            android:textSize="@dimen/sp_13"
            android:textColor="@color/ed_gray"
            android:layout_marginTop="@dimen/dp_10"
            android:text="@string/set_wallet_mnemonic_tip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_marginTop="@dimen/dp_25"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="1"
                android:textColor="@color/common_black"
                android:textSize="@dimen/sp_16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/word_one"
                android:layout_marginLeft="@dimen/dp_15"
                android:background="@drawable/shape_gray_bg"
                android:paddingLeft="@dimen/dp_10"
                android:gravity="center_vertical"
                android:drawableRight="@mipmap/icon_hide_clear"
                android:paddingRight="@dimen/dp_15"
                android:textColor="@color/common_black"
                android:textSize="@dimen/sp_16"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/dp_35" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/dp_15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="2"
                android:textColor="@color/common_black"
                android:textSize="@dimen/sp_16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/word_two"
                android:layout_marginLeft="@dimen/dp_15"
                android:background="@drawable/shape_gray_bg"
                android:paddingLeft="@dimen/dp_10"
                android:gravity="center_vertical"
                android:drawableRight="@mipmap/icon_hide_clear"
                android:paddingRight="@dimen/dp_15"
                android:textColor="@color/common_black"
                android:textSize="@dimen/sp_16"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/dp_35" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/dp_15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="3"
                android:textColor="@color/common_black"
                android:textSize="@dimen/sp_16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/word_three"
                android:layout_marginLeft="@dimen/dp_15"
                android:background="@drawable/shape_gray_bg"
                android:paddingLeft="@dimen/dp_10"
                android:gravity="center_vertical"
                android:drawableRight="@mipmap/icon_hide_clear"
                android:paddingRight="@dimen/dp_15"
                android:textColor="@color/common_black"
                android:textSize="@dimen/sp_16"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/dp_35" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_100">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/one_word"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_marginRight="@dimen/dp_5"
                    android:gravity="center"

                    android:textColor="@color/blue"
                    android:background="@drawable/text_onclick_blue_bg_stroke"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="@dimen/dp_20" />

                <TextView
                    android:id="@+id/two_word"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_marginRight="@dimen/dp_5"
                    android:gravity="center"

                    android:textColor="@color/blue"
                    android:background="@drawable/text_onclick_blue_bg_stroke"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="@dimen/dp_20" />

                <TextView
                    android:id="@+id/three_word"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_marginRight="@dimen/dp_5"
                    android:gravity="center"

                    android:textColor="@color/blue"
                    android:background="@drawable/text_onclick_blue_bg_stroke"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="@dimen/dp_20" />

                <TextView
                    android:id="@+id/four_word"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_marginRight="@dimen/dp_5"
                    android:gravity="center"

                    android:textColor="@color/blue"
                    android:background="@drawable/text_onclick_blue_bg_stroke"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="@dimen/dp_20" />
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="@dimen/dp_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/five_word"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_marginRight="@dimen/dp_5"
                    android:gravity="center"
                    android:textColor="@color/blue"
                    android:background="@drawable/text_onclick_blue_bg_stroke"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="@dimen/dp_20" />

                <TextView
                    android:id="@+id/six_word"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_marginRight="@dimen/dp_5"
                    android:gravity="center"
                    android:textColor="@color/blue"
                    android:background="@drawable/text_onclick_blue_bg_stroke"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="@dimen/dp_20" />

                <TextView
                    android:id="@+id/seven_word"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_marginRight="@dimen/dp_5"
                    android:textColor="@color/blue"
                    android:background="@drawable/text_onclick_blue_bg_stroke"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="@dimen/dp_20" />

                <TextView
                    android:id="@+id/eight_word"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_marginRight="@dimen/dp_5"
                    android:gravity="center"
                    android:textColor="@color/blue"
                    android:background="@drawable/text_onclick_blue_bg_stroke"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="@dimen/dp_20" />
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="@dimen/dp_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/nine_word"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_marginRight="@dimen/dp_5"
                    android:gravity="center"
                    android:textColor="@color/blue"
                    android:background="@drawable/text_onclick_blue_bg_stroke"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="@dimen/dp_20" />

                <TextView
                    android:id="@+id/ten_word"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_marginRight="@dimen/dp_5"
                    android:gravity="center"
                    android:textColor="@color/blue"
                    android:background="@drawable/text_onclick_blue_bg_stroke"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="@dimen/dp_20" />

                <TextView
                    android:id="@+id/eleven_word"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_marginRight="@dimen/dp_5"
                    android:gravity="center"
                    android:textColor="@color/blue"
                    android:background="@drawable/text_onclick_blue_bg_stroke"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="@dimen/dp_20" />

                <TextView
                    android:id="@+id/twelve_word"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_marginRight="@dimen/dp_5"
                    android:gravity="center"
                    android:textColor="@color/blue"
                    android:background="@drawable/text_onclick_blue_bg_stroke"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="@dimen/dp_20" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/next_step_btn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_39"
            android:layout_marginTop="@dimen/dp_20"
            android:background="@drawable/btn_radius_blue"
            android:foreground="@drawable/bg_white"
            android:gravity="center"
            android:text="@string/next_step"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_20" />
    </LinearLayout>
</LinearLayout>
