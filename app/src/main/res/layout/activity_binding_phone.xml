<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="lanjing.com.titan.activity.BindingPhoneActivity">

    <com.lxh.baselibray.view.TitleView
        android:layout_width="match_parent"
        android:layout_height="@dimen/titil_view_height"
        android:background="@color/default_white_bg"
        app:ivLeftPic="@mipmap/icon_page_return"
        app:titleTextColor="@color/common_black"
        app:tvTitleText="@string/binding_phone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_15"
        android:background="@color/public_bg" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_10"
        android:orientation="vertical">
        <!--原手机号码-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="验证原手机号"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/tv_home_sun"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="123456" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:layout_centerHorizontal="true"
                android:background="@color/line_gray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10">
                <!--验证码-->
                <com.wrapp.floatlabelededittext.FloatLabeledEditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <EditText
                        android:id="@+id/et_used_code"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_30"
                        android:layout_marginTop="@dimen/dp_10"
                        android:background="@null"
                        android:digits="0123456789"
                        android:gravity="center|left"
                        android:hint="@string/verification_code"
                        android:inputType="number"
                        android:maxLength="4"
                        android:singleLine="true"
                        android:textColor="@color/common_black"
                        android:textColorHint="@color/gray_text_tip"
                        android:textCursorDrawable="@drawable/cursor_style"
                        android:textSize="@dimen/sp_15" />
                </com.wrapp.floatlabelededittext.FloatLabeledEditText>

                <TextView
                    android:id="@+id/tv_used_pwd"
                    android:layout_width="@dimen/dp_80"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="@dimen/dp_5"
                    android:gravity="center_horizontal"
                    android:text="@string/get_verification_code"
                    android:textColor="@color/blue"
                    android:textSize="@dimen/sp_13" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="新手机号码"
            android:textColor="#000000" />
        <!--手机号-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <Spinner
                android:id="@+id/spinner1"
                android:layout_width="@dimen/dp_100"
                android:layout_height="@dimen/dp_30"
                android:layout_gravity="bottom"
                android:background="@drawable/spinner_style"
                android:entries="@array/spingarr"
                android:theme="@style/itemSpinner" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.wrapp.floatlabelededittext.FloatLabeledEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_5">

                    <EditText
                        android:id="@+id/ed_phone"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_30"
                        android:layout_marginTop="@dimen/dp_10"
                        android:background="@null"
                        android:cursorVisible="false"
                        android:inputType="phone"
                        android:hint="@string/phone"
                        android:singleLine="true"
                        android:textColor="@color/common_black"
                        android:textColorHint="@color/gray_text_tip"
                        android:textCursorDrawable="@drawable/cursor_style"
                        android:textSize="@dimen/sp_15" />
                </com.wrapp.floatlabelededittext.FloatLabeledEditText>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:background="@color/line_gray" />
            </LinearLayout>
        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_5"
            android:text="@string/tip_phone_tx"
            android:textColor="@color/gray"
            android:visibility="gone" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_5"
            android:text="@string/tip_phone"
            android:textColor="@color/gray"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10">
            <!--验证码-->
            <com.wrapp.floatlabelededittext.FloatLabeledEditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <EditText
                    android:id="@+id/ed_verification_code"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_30"
                    android:layout_marginTop="@dimen/dp_10"
                    android:background="@null"
                    android:digits="0123456789"
                    android:gravity="center|left"
                    android:hint="@string/verification_code"
                    android:inputType="number"
                    android:maxLength="4"
                    android:singleLine="true"
                    android:textColor="@color/common_black"
                    android:textColorHint="@color/gray_text_tip"
                    android:textCursorDrawable="@drawable/cursor_style"
                    android:textSize="@dimen/sp_15" />
            </com.wrapp.floatlabelededittext.FloatLabeledEditText>

            <TextView
                android:id="@+id/agin_verification_code"
                android:layout_width="@dimen/dp_80"

                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="@dimen/dp_5"
                android:gravity="center_horizontal"
                android:text="@string/get_verification_code"
                android:textColor="@color/blue"
                android:textSize="@dimen/sp_13" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_centerHorizontal="true"
            android:background="@color/line_gray" />

        <TextView
            android:id="@+id/next_step_btn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_39"
            android:layout_marginTop="@dimen/dp_50"
            android:background="@drawable/btn_radius_blue"
            android:foreground="@drawable/bg_white"
            android:gravity="center"
            android:text="@string/next_step"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_20" />
    </LinearLayout>
</LinearLayout>
