<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dp_5"
    android:orientation="vertical"
    android:layout_marginBottom="@dimen/dp_5"

    android:foreground="@drawable/bg_white"
    android:id="@+id/notice_item">

    <TextView
        android:id="@+id/tv_notice_time"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_gravity="center_horizontal"
        android:padding="@dimen/dp_5"
        android:background="@drawable/shape_gray_bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:padding="@dimen/dp_10"
        android:layout_margin="@dimen/dp_10"
        android:background="@drawable/shape_gray_bg"
        android:orientation="vertical"
        android:id="@+id/notice_item_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_notice_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/icon_open"

            android:layout_marginTop="@dimen/dp_5"

            android:textColor="#ff7b7b7b"
            android:textSize="15sp" />

        <TextView
            android:layout_gravity="right"
            android:id="@+id/tv_team"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_5"
            android:text="泰坦计划运营团队"
            android:textColor="#ff7b7b7b"
            android:textSize="15sp"
            />
    </LinearLayout>
</LinearLayout>