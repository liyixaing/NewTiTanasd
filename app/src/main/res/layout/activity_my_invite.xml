<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="lanjing.com.titan.activity.MyInviteActivity">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.lxh.baselibray.view.TitleView
            android:layout_width="match_parent"
            android:layout_height="@dimen/titil_view_height"
            android:background="@color/default_white_bg"
            app:ivLeftPic="@mipmap/icon_page_return"
            app:titleTextColor="@color/common_black"
            app:tvTitleText="@string/my_invite" />
        <ImageView
            android:id="@+id/my_invite_bg"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:background="@mipmap/icon_my_invite_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_marginTop="@dimen/dp_8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_1"
                android:background="@drawable/shape_blue_bg"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/dp_53">
                <TextView
                    android:id="@+id/tv_friend_num"
                    android:text="0"
                    android:textSize="@dimen/sp_15"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:text="@string/invited_friends"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_15"
                android:background="@drawable/shape_blue_bg"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/dp_53">
                <TextView
                    android:id="@+id/tv_reward_num"
                    android:text="0"
                    android:textSize="@dimen/sp_15"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:text="@string/amount_of_reward"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="@dimen/dp_8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_1"
                android:background="@drawable/shape_blue_bg"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/dp_53">
                <TextView
                    android:id="@+id/tv_team_sun"
                    android:text="0"
                    android:textSize="@dimen/sp_15"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:text="@string/total_number"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_15"
                android:background="@drawable/shape_blue_bg"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/dp_53">
                <TextView
                    android:id="@+id/tv_team_sum"
                    android:text="0"
                    android:textSize="@dimen/sp_15"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:text="@string/total_number_sun"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/dp_8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_1"
                android:background="@drawable/shape_blue_bg"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/dp_53">
                <TextView
                    android:id="@+id/tv_xq_sun"
                    android:text="0"
                    android:textSize="@dimen/sp_15"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:text="@string/total_xq_number"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_15"
                android:background="@drawable/shape_blue_bg"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/dp_53">
                <TextView
                    android:id="@+id/tv_xq_sum"
                    android:text="0"
                    android:textSize="@dimen/sp_15"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:text="@string/total_xq_number_sun"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>

        <!--邀请链接-->
        <LinearLayout
            android:visibility="gone"
            android:gravity="center_vertical"
            android:background="@drawable/shape_gray_bg"
            android:layout_margin="@dimen/dp_15"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_32">
            <TextView
                android:id="@+id/tv_invite_url"
                android:text="http://www.titan.com"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_marginRight="@dimen/dp_8"
                android:id="@+id/invite_btn"
                android:layout_width="@dimen/dp_69"
                android:layout_height="@dimen/dp_21"
                android:background="@drawable/btn_radius_blue"
                android:foreground="@drawable/bg_white"
                android:gravity="center"
                android:text="@string/invite_url"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_9" />
        </LinearLayout>
        <!--注册链接-->
        <LinearLayout
            android:visibility="gone"
            android:gravity="center_vertical"
            android:background="@drawable/shape_gray_bg"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_32">
            <TextView
                android:id="@+id/tv_register_url"
                android:text="http://www.titan.com"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_marginRight="@dimen/dp_8"
                android:id="@+id/register_btn"
                android:layout_width="@dimen/dp_69"
                android:layout_height="@dimen/dp_21"
                android:background="@drawable/btn_radius_blue"
                android:foreground="@drawable/bg_white"
                android:gravity="center"
                android:text="@string/register_url"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_9" />
        </LinearLayout>

        <TextView
            android:layout_margin="@dimen/dp_15"
            android:text="@string/friend_list"
            android:textSize="@dimen/sp_15"
            android:textColor="#182146"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_width="match_parent"
            android:visibility="gone"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@color/common_black"
                android:text="ID"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />
            <TextView
                android:textColor="@color/common_black"
                android:text="@string/nick_name"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />
            <TextView
                android:gravity="right"
                android:textColor="@color/common_black"
                android:text="@string/register_time"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <com.scwang.smartrefresh.layout.SmartRefreshLayout
            android:layout_marginTop="@dimen/dp_10"
            android:id="@+id/refresh"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_marginTop="@dimen/dp_10"
                    android:id="@+id/rv_normal_show"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="68dp"
                        android:layout_height="52dp"
                        android:background="@mipmap/icon_normal" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/normal_data"
                        android:textSize="@dimen/sp_12" />
                </LinearLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv"
                    android:layoutAnimation="@anim/layout_animation_from_bottom"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="gone" />
            </RelativeLayout>
        </com.scwang.smartrefresh.layout.SmartRefreshLayout>
    </LinearLayout>
</LinearLayout>
