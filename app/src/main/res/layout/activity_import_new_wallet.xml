<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="lanjing.com.titan.activity.ImportNewWalletActivity">

    <com.lxh.baselibray.view.TitleView
        android:layout_width="match_parent"
        android:layout_height="@dimen/titil_view_height"
        android:background="@color/default_white_bg"
        app:ivLeftPic="@mipmap/icon_page_return"
        app:titleTextColor="@color/common_black"
        app:tvTitleText="@string/import_the_wallet" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_20"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:text="@string/please_input_word"
            android:textColor="@color/blue"
            android:textSize="@dimen/sp_16" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textColor="@color/common_black"
                android:textSize="@dimen/sp_16" />

            <EditText
                android:id="@+id/ed_word_one"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_35"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_weight="1"
                android:background="@drawable/shape_gray_bg"
                android:cursorVisible="false"
                android:gravity="center_vertical"
                android:maxLength="11"
                android:paddingLeft="@dimen/dp_10"
                android:textColor="@color/common_black"
                android:textCursorDrawable="@drawable/cursor_style"
                android:textSize="@dimen/sp_16" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2"
                android:textColor="@color/common_black"
                android:textSize="@dimen/sp_16" />

            <EditText
                android:id="@+id/ed_word_two"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_35"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_weight="1"
                android:background="@drawable/shape_gray_bg"
                android:gravity="center_vertical"
                android:maxLength="11"
                android:paddingLeft="@dimen/dp_10"
                android:textColor="@color/common_black"
                android:textCursorDrawable="@drawable/cursor_style"
                android:textSize="@dimen/sp_16" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3"
                android:textColor="@color/common_black"
                android:textSize="@dimen/sp_16" />

            <EditText
                android:id="@+id/ed_word_three"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_35"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_weight="1"
                android:background="@drawable/shape_gray_bg"
                android:gravity="center_vertical"
                android:maxLength="11"
                android:paddingLeft="@dimen/dp_10"
                android:textColor="@color/common_black"
                android:textCursorDrawable="@drawable/cursor_style"
                android:textSize="@dimen/sp_16" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:text="@string/please_input_private_key"
            android:textColor="@color/blue"
            android:textSize="@dimen/sp_16" />

        <EditText
            android:id="@+id/ed_private_key"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@drawable/shape_gray_bg"
            android:gravity="center_vertical"
            android:padding="@dimen/dp_10"
            android:textColor="@color/common_black"
            android:textCursorDrawable="@drawable/cursor_style"
            android:textSize="@dimen/sp_16" />

        <TextView
            android:id="@+id/next_step_btn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_39"
            android:layout_marginTop="@dimen/dp_20"
            android:background="@drawable/btn_radius_blue"
            android:foreground="@drawable/bg_white"
            android:gravity="center"
            android:text="@string/next_step"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_20" />
    </LinearLayout>

</LinearLayout>
