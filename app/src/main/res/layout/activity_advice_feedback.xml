<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="lanjing.com.titan.activity.AdviceFeedbackActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.lxh.baselibray.view.TitleView
            android:id="@+id/title_lay"
            android:layout_width="match_parent"
            android:layout_height="@dimen/titil_view_height"
            android:background="@color/default_white_bg"
            app:ivLeftPic="@mipmap/icon_page_return"
            app:titleTextColor="@color/common_black"
            app:tvTitleText="@string/advice_feedback" />
        <ImageView
            android:layout_marginRight="@dimen/dp_15"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:id="@+id/img_feedback_list"
            android:background="@mipmap/icon_feedback_list"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30" />

    </RelativeLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginTop="@dimen/dp_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_20"
                android:text="@string/advice_title"
                android:textColor="@color/blue" />

            <EditText
                android:layout_marginTop="@dimen/dp_10"
                android:id="@+id/edit_problem_title"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_20"
                android:background="@drawable/shape_gray_bg"
                android:cursorVisible="false"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dp_10"
                android:textColor="@color/common_black"
                android:textCursorDrawable="@drawable/cursor_style"
                android:textSize="@dimen/sp_15" />

            <TextView
                android:layout_marginTop="@dimen/dp_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_20"
                android:text="@string/advice_content"
                android:textColor="@color/blue" />

            <EditText
                android:id="@+id/edit_problem"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_180"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@drawable/shape_gray_bg"
                android:gravity="top"
                android:paddingLeft="@dimen/dp_10"
                android:paddingTop="@dimen/dp_10"
                android:textColor="@color/common_black"
                android:textCursorDrawable="@drawable/cursor_style"
                android:textSize="@dimen/sp_15" />
        </LinearLayout>
    </ScrollView>


    <TextView
        android:id="@+id/submit_advice_btn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_39"
        android:layout_marginBottom="@dimen/dp_30"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_50"
        android:background="@drawable/btn_radius_blue"
        android:foreground="@drawable/bg_white"
        android:gravity="center"
        android:text="@string/submit"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_20" />
</LinearLayout>
